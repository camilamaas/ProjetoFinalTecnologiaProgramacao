@model ProjetoFinalFaculdade.Models.Professor
@{
    ViewBag.Title = "Novo Professor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Professor"))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CPF)
        @Html.TextBoxFor(m => m.CPF, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Matricula)
        @Html.TextBoxFor(m => m.Matricula, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataNascimento)
        @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telefone)
        @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}