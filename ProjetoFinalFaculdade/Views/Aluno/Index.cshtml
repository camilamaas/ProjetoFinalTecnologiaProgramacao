@model ProjetoFinalFaculdade.ViewModels.AlunoIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alunos</h2>

@if (@Model.Alunos.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Matricula</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model.Alunos)
            {
                <tr>
                    <td> @Html.ActionLink(@aluno.Nome, "Details", new { aluno.Id })</td>
                    <td> @aluno.Matricula</td>
                    <td> @aluno.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não existem alunos cadastrados.</p>
}

