@model ProjetoFinalFaculdade.ViewModels.CursoIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cursos</h2>

@if (@Model.Cursos.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ementa</th>
                <th>Duração</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model.Cursos)
            {
                <tr>
                    <td> @Html.ActionLink(@curso.Nome, "Details", new { curso.Id })</td>
                    <td> @curso.Ementa</td>
                    <td> @curso.Duracao</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não existem alunos cadastrados.</p>
}

