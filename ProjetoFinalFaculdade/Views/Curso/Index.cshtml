@model IEnumerable<ProjetoFinalFaculdade.Models.Curso>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Novo Curso", "New", null, new { @class = "btn btn-primary" })
</p>

@if (@Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ementa</th>
                <th>Duração</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td> @Html.ActionLink(@curso.Nome, "Details", new { curso.Id })</td>
                    <td> @curso.Ementa</td>
                    <td> @curso.Duracao</td>
                    <td>
                        <p>
                            @Html.ActionLink("Editar", "Edit", new { curso.Id }, new { @class = "btn btn-primary" })
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não existem alunos cadastrados.</p>
}

